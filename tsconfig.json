{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationDir": "./dist/types",
    "moduleResolution": "node",
    "jsx": "react-jsx" // Use the new JSX transform
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
